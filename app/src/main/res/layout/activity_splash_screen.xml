<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splashGlideBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SSGuideLineH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />


    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="169dp"
        android:layout_height="182dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/img_ss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SSGuideLineH"
        app:srcCompat="@drawable/img_ss" />

    <TextView
        android:id="@+id/SSNameSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXAMEN 1EV"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashImg" />
</androidx.constraintlayout.widget.ConstraintLayout>